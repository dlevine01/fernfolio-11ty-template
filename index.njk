---
layout: layouts/base.njk
section: home
---
<div class="home-page">
	<div class="home-page__bg-square"></div>

  <div class="hero">
    <div class="hero__col">
      <h1 class="hero__title gradient-text">{{ home.title }}</h1>
      <h4 class="hero__subtitle">{{ bio.subtitle }}</h4>
    </div>
    <div class="hero__col">
      <img
        class="hero__image shadow"
        src="{% if home.image -%}{{ home.image }}{%- endif %}"
        alt="{{ home.image_alt }}"
        width="1000px"
        height="1000px"
        loading="lazy">
    </div>
  </div>

  <hr>
  <div class="about-section">
    <p class="her-_subtitle">{{ bio.summary }} <a href='/about'>About me</a></p>
  </div>

  <hr>
  <h2>Projects</h2>
  {% set projectlist = collections.project %}
  {% include "components/projectlist.njk" %}

